/* pages/index/index.wxss */
.container {

}
.header {
  z-index: 999;
  display: flex;
  position: fixed;
  width: 100%;
  /*height: 60rpx;*/
  background-color: #D72727;

}
.header .city {
  font-size: 24rpx;
  margin: 20rpx 40rpx;
  color: #fff;
}
.search {
  flex: 1;
  height: 50rpx;
  margin: 10rpx 30rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid #ccc;
  background-color: #fff;
  border-radius: 20rpx;
}
.icon-search {
  position: absolute;
  right: 44rpx;
  top: 20rpx;
}

/*轮播图*/
.banner {
  height: 400rpx;
  width: 100%;
  margin-top: 74rpx;
}
.slide-image {
  width: 100%;
}

/*通知栏*/
.notice {
  width: 100%;
}


/*nav栏*/
.navs {
  display: flex;
  width: 100%;
}
.nav-item {
  width: 20%;
  height: 0;
  text-align: center;
  padding-bottom: 20%; 
  background-color: #D72727;
}
.des {
  display: block;
}
.intro {
  display: inline-block;
  font-size: 30rpx;
  color: #ccc;
}
/*广告栏*/
.rent{
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #666;
}
.rent-item {
  width: 47%;
  height: 140rpx;
  float: left;
  margin: 2% 0 0 2%;
  background-color: blue;
  border-radius: 10rpx;
}
/*会员商城*/
.members-wrap {
  width: 100%;
}
.members {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
  padding-left: 10rpx;
  border-bottom: 1rpx solid #666;
}
.members-title {
  color: #DE8357;
}
.more {
  float: right;
  margin-right: 50rpx;
  color: #999;
  font-size: 28rpx;
}
.icon-arrow {
  position: absolute;
  right: 16rpx;
  top: 6rpx;
}
.member-list {
  width: 100%;
}
.member {
  width: 25%;
  height: 0;
  float: left;
  padding-bottom: 25%;
  background-color: green;
  /*border: 1rpx solid #666;*/
}
/*tab栏*/
.tab {
  width: 100%;
  background-color: skyblue;
}